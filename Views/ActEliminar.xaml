<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="acolumbaS6.Views.ActEliminar"
             Title="ActEliminar">
    <VerticalStackLayout>
        <Label 
            Text="Actualizar - Eliminar estudiante"
            FontSize="20" 
            HorizontalTextAlignment="Center" />
        <Entry x:Name="txtCodigo" IsReadOnly="True" Placeholder="ID"/>
        <Entry x:Name="txtNombre" Placeholder="Nombre"/>
        <Entry x:Name="txtApellido" Placeholder="Apellido"/>
        <Entry x:Name="txtEdad" Keyboard="Numeric" Placeholder="Edad"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnActualizar"
                    Text="Actualizar"
                    Clicked="btnActualizar_Clicked"
                    Grid.Row="0"
                    Grid.Column="0"/>

            <Button x:Name="btnEliminar"
                    Text="Eliminar"
                    Clicked="btnEliminar_Clicked"
                    Grid.Row="0"
                    Grid.Column="1"/>

        </Grid>
    </VerticalStackLayout>
</ContentPage>
